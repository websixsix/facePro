/* miniprogram/pages/pageone/pageone.wxss */

page{
  height: 100%;
  color:#00a4ff;
}
.contain{
  min-height: 100%;
}
image{
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top:0;
}
.signUp,.signIn{
  padding-top: 20px;
  padding-bottom:20px; 
}
.signUp{
  border-bottom: 1px solid #e3e3e3;
}

text{
  display: block;
  text-align: center;
  width: 100%;
  /* color: #00a4ff; */
}

button{
  width: 70%;
  margin-top: 10px;
  color: #00a4ff;
  border-radius: 30px;
  border: 1px solid #00a4ff;
  background-color: #ffffff;
}
button.primary{
  color: #ffffff;
  background-color: #2bb5ff;
  border: 1px solid #ffffff;
}
.logo{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
  font-size: 30px;
  padding-bottom:20px; 
  margin: 0;
  padding-top: 30px;
}
.logo image{
  display: block;
  position: static;
  width: 100px;
  height: 100px;
}
navigator image{
  display: block;
  position: static;
  width: 30px;
  height: 30px;
  margin-top:8px;
}
navigator view{
  display: flex;
  flex-direction: row;
  justify-content: center;
}